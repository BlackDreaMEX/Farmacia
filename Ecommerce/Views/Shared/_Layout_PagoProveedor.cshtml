    <!-- Modernizr JS -->
    <script src="~/Estilos/js/modernizr-2.6.2.min.js"></script>
    <!-- FOR IE9 below -->
    <!--[if lt IE 9]>
    <script src="js/respond.min.js"></script>
    <![endif]-->
</head>
    <body>
        <nav class="colorlib-nav navbar-static-top" role="navigation">
            <div class="top-menu">
                <div class="container">
                    <div class="row">
                        <div class="col-md-5">
                            <div id="colorlib-logo"><a href="index.html" style="color: darkblue">FARMACIA ONLINE</a></div>
                        </div>
                        <div class="col-xs-7 text-right menu-1">
                            <ul>
                                <li>@Html.ActionLink("INICIO", "InicioPagoProveedor", "PagoProveedor")</li>
                                <li>@Html.ActionLink("CONSULTAR FACTURAS", "ConsultarFacturas", "PagoProveedor")</li>
                                <li>@Html.ActionLink("HISTORIAL DE PAGOS", "HistorialPagos", "PagoProveedor")</li>
                                <li> <a class="nav-item" href="@Url.Action("Index", "Home")"><i class="icon-external-link"></i> CERRAR SESIÓN</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        <div class="container body-content">
            @RenderBody()

        </div>

        <footer id="colorlib-footer" role="contentinfo">
            <div class="container">
                <div class="row row-pb-md">
                    <div class="col-md-4 colorlib-widget">
                        <h4>Acerca de la Tienda</h4>
                        <p>Proyecto de E-Commerce sobre venta de productos farmacéuticos</p>
                        <p>Realizado en el framework ASP.net</p>
                        <p>
                            <ul class="colorlib-social-icons">
                                <li><a href="#"><i class="icon-twitter"></i></a></li>
                                <li><a href="#"><i class="icon-facebook"></i></a></li>
                                <li><a href="#"><i class="icon-location"></i></a></li>

                            </ul>
                        </p>
                    </div>

                    <div class="col-md-4 colorlib-widget">
                        <h4>Información</h4>
                        <p>
                            <ul class="colorlib-footer-links">
                                <li><a href="#">Nosotros</a></li>
                                <li><a href="#">Información de entrega</a></li>
                                <li><a href="#">Politica de privacidad</a></li>
                                <li><a href="#">Soporte</a></li>

                            </ul>
                        </p>
                    </div>



                    <div class="col-md-4 colorlib-widget">
                        <h4>Información de contacto</h4>
                        <ul class="colorlib-footer-links">
                            <li>Instituto Tecnológico de Toluca, <br> Av.Tecnológico #2313, Metepec</li>
                            <li><a href="tel://1234567920">+ 1235 2355 98</a></li>
                            <li><a href="mailto:info@yoursite.com">info.farmaciao@online.com</a></li>
                            <li><a href="#">farmaciaonline.com</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="copy">
                <div class="row">
                    <div class="col-md-12 text-center">
                        <p>

                            <span class="block">
                                <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                                Copyright &copy;
                                <script>document.write(new Date().getFullYear());</script> All rights reserved
                                <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                            </span>

                        </p>
                    </div>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)



        <!-- jQuery -->
        <script src="~/Estilos/js/jquery.min.js"></script>
        <!-- jQuery Easing -->
        <script src="~/Estilos/js/jquery.easing.1.3.js"></script>
        <!-- Bootstrap -->
        <script src="~/Estilos/js/bootstrap.min.js"></script>
        <!-- Waypoints -->
        <script src="~/Estilos/js/jquery.waypoints.min.js"></script>
        <!-- Flexslider -->
        <script src="~/Estilos/js/jquery.flexslider-min.js"></script>
        <!-- Owl carousel -->
        <script src="~/Estilos/js/owl.carousel.min.js"></script>
        <!-- Magnific Popup -->
        <script src="~/Estilos/js/jquery.magnific-popup.min.js"></script>
        <script src="~/Estilos/js/magnific-popup-options.js"></script>
        <!-- Date Picker -->
        <script src="~/Estilos/js/bootstrap-datepicker.js"></script>
        <!-- Stellar Parallax -->
        <script src="~/Estilos/js/jquery.stellar.min.js"></script>
        <!-- Main -->
        <script src="~/Estilos/js/main.js"></script>

        <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
